{
  "name": "mcp-pointer-v2",
  "version": "2.3.0",
  "description": "Modern, secure MCP Pointer for AI-assisted web development with template-react-ts architecture",
  "private": true,
  "packageManager": "bun@1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "cd packages/server && bun run dev",
    "dev:extension": "cd packages/chrome-extension && bun run dev",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx src --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "fix-all": "npm run lint:fix && npm run format",
    "type-check": "tsc --noEmit --incremental",
    "test": "bun run test:*",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:security": "bun run audit && bun run lint:security",
    "test:coverage": "vitest --coverage",
    "lint:security": "eslint . --ext .ts,.tsx,.js,.jsx --config .eslintrc.security.js",
    "audit": "audit-ci --config audit-ci.json",
    "audit:fix": "bun audit --fix",
    "audit:security": "snyk test",
    "clean": "bun run clean:*",
    "clean:extension": "cd packages/chrome-extension && rm -rf dist dev",
    "clean:server": "cd packages/server && rm -rf dist",
    "clean:all": "rm -rf node_modules packages/*/node_modules bun.lockb",
    "setup": "bun install && bun run setup:*",
    "setup:db": "bun run db:migrate && bun run db:seed",
    "setup:security": "bun run audit && bun run lint:security",
    "setup:git": "bunx husky init",
    "db:migrate": "cd packages/server && bun run db:migrate",
    "db:seed": "cd packages/server && bun run db:seed",
    "db:reset": "cd packages/server && bun run db:reset",
    "prepare": "husky",
    "pre-commit": "bun run lint:staged && bun run type-check",
    "pre-push": "bun run test:security && bun run test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "axios": "^1.7.9",
    "better-sqlite3": "^12.4.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^4.1.13",
    "use-local-storage": "^3.0.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^1.0.0",
    "audit-ci": "^7.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "snyk": "^1.1248.0",
    "terser": "^5.44.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vitest": "^1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "ai",
    "pointer",
    "browser",
    "devtools",
    "typescript",
    "security",
    "webrtc",
    "modern",
    "react",
    "vite",
    "tailwind"
  ],
  "author": "Your Company Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/your-company-pointer.git"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}