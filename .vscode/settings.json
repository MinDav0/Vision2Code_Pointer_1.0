{
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    ".",
    "packages/server",
    "packages/chrome-extension",
    "packages/shared"
  ],
  "editor.formatOnSave": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  }
}
