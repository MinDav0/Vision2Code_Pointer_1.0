# MCP Pointer Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=7007
HOST=0.0.0.0

# Database Configuration
DATABASE_PATH=./data/mcp-pointer.db
DATABASE_BACKUP_PATH=./data/backups

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Service Configuration
# Claude API (Optional)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MAX_TOKENS=4000

# Cursor AI Configuration (Optional)
CURSOR_WORKSPACE_PATH=/path/to/your/workspace
CURSOR_EXTENSION_ID=your-cursor-extension-id

# Local LLM Configuration (Optional)
LOCAL_LLM_ENABLED=false
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# WebRTC Configuration
WEBRTC_PORT=7008
WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,chrome-extension://*

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/mcp-pointer.log

# Default Admin User (CHANGE IN PRODUCTION!)
DEFAULT_ADMIN_EMAIL=admin@mcp-pointer.local
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=System Administrator
