{
  "manifest_version": 3,
  "name": "MCP Pointer v2.2",
  "description": "Point to browser DOM elements for agentic coding tools via MCP",
  "version": "2.2.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "http://localhost:7007/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MCP Pointer"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
