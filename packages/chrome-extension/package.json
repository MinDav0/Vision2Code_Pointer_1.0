{
  "name": "@mcp-pointer/chrome-extension",
  "version": "2.3.0",
  "description": "Chrome extension for MCP Pointer - Element targeting with AI integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "plasmo build",
    "build:dev": "plasmo build --dev",
    "dev": "plasmo dev",
    "package": "plasmo package",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@mcp-pointer/shared": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.251",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "plasmo": "^0.90.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "chrome-extension",
    "mcp",
    "element-targeting",
    "ai-integration",
    "webrtc",
    "react"
  ],
  "author": "Your Company Team",
  "license": "MIT",
  "manifest": {
    "name": "MCP Pointer",
    "description": "Point to browser DOM elements for agentic coding tools via MCP",
    "version": "2.0.0",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "http://localhost:7007/*",
      "https://*/*"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
}
